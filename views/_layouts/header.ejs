    <img width="25px" src="/images/ajax-loader.gif" alt="">
  </div>
</div>
<body>
    <nav class="navbar bg-dark navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">  
      <div class="container">
        <a class="navbar-brand" href="/">CmsShoppingCart</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% pages.forEach(function (page) { %>
              <% if (page.slug=="home" ) {%>
                <li class="nav-item"> <a class="nav-link" href="/"> <%=page.title %> </a> </li>
                <% } else { %>
                  <li class="nav-item"> <a class="nav-link" href="/<%=page.slug %>"> <%=page.title %> </a> </li>
                  <% } %>
            <% }); %>
          </ul>
          <ul class="navbar-nav navbar-right">
            <li class="nav-item"> <a class="nav-link" href="/cart/checkout">My Cart ( 
              <% if (typeof cart !==  "undefined" ) {%>
                <%= cart.length %> 
                <% } else { %>
                0
              <% } %>
              )</a>         
            </li> 
            <% if(user){ %>
              <li class="nav-item"><a class="nav-link disabled text-light fw-bold">[ Hi, <%= user.username %> ]</a></li>   
              <li class="nav-item"><a class="nav-link" href="/users/logout">Logout</a></li>   
            <% }else{ %>  
              <li class="nav-item"><a class="nav-link" href="/users/register">Register</a></li>   
              <li class="nav-item"><a class="nav-link" href="/users/login">Login</a></li>   
            <% } %>    
            <% if(user && user.admin == 1){ %>
              <li class="nav-item"><a class="nav-link" href="/admin/pages">Admin Area</a></li>   
            <% }%>          
          </ul>
        </div>
      </div>
    </nav>
    <br>
    <div class="container">
      <%- messages('messages', locals) %>
      
      <% if (errors) { %>
        <% errors.forEach(function(error){ %>
          <div class="alert alert-danger" role="alert">
            <%=error.msg%>
          </div>
        <% }); %>
      <% } %>
        <div class="row">
          <div class="col-xs-12 col-md-3">
            <h3>Categories</h3>
            <div class="list-group">
             <a  class="list-group-item list-group-item-action list-group-item-dark fw-bold" href="/products">All products</a>
              <% categories.forEach(function (c) { %>
                    <a class="list-group-item list-group-item-action list-group-item-dark fw-bold" href="/products/<%= c.slug %>"><%=c.title %></a>
              <% }); %>
            </div>
          </div>
          <div class="col-xs-12 col-md-1"></div>
